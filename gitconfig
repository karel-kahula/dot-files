[rerere]
    enabled = 1

[alias]
    br = branch
    cv = commit -v
    cp = cherry-pick
    st = status
    co = checkout
    amend = commit --ammend -v
    ls = log --date=short --pretty=format:%C(yellow)%h\\ %Creset\\-\\ %C(cyan)%cd\\ %Creset\\ \\-\\ %C(red)%d\\ %Creset%s%C(green)\\ [%cn] --decorate
    ah = "!git config -l | grep alias | cut -c 7-"
    gr = grep
    d = difftool

[core]
	excludesfile = /Users/kkahula/.gitignore
    editor = vim
	autocrlf = input
	pager = less --no-init --quit-if-one-screen

[diff]
	tool = vimdiff

[difftool]
	prompt = false

[color]
	ui = true

[push]
	default = simple

[grep]
    linenumber = true
[pager]
	branch = false
[fetch]
    prune = true
